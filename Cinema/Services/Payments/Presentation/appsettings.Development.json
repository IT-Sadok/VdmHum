{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "ConnectionStrings": {
        "DefaultConnection": "Host=localhost;Port=5432;Database=cinema_payments;Username=postgres;Password=1234"
    },
    "Jwt": {
        "Issuer": "Cinema.Identity",
        "Audience": "backend",
        "SigningCertificatePath": "certs/jwt-dev.cer",
        "AccessTokenName": "access_token"
    },
    "Grpc": {
        "BookingsServiceUrl": "https://localhost:7115"
    },
    "Payment": {
        "DefaultProvider": "LiqPay"
    },
    "OutboxProcessor": {
        "DelaySeconds": 1,
        "BatchSize": 100
    },
    "ServiceBus": {
        "ConnectionString": "Endpoint=sb://localhost;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=SAS_KEY_VALUE;UseDevelopmentEmulator=true;",
        "PublisherTopic": "payments-events"
    }
}
