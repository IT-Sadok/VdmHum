{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "ConnectionStrings": {
        "DefaultConnection": "Host=localhost;Port=5432;Database=cinema_bookings;Username=postgres;Password=1234"
    },
    "Jwt": {
        "Issuer": "Cinema.Identity",
        "Audience": "backend",
        "SigningCertificatePath": "certs/jwt-dev.cer",
        "AccessTokenName": "access_token"
    },
    "Grpc": {
        "MoviesServiceUrl": "https://localhost:7026",
        "PaymentsServiceUrl": "https://localhost:7003"
    },
    "OutboxProcessor": {
        "DelaySeconds": 1,
        "BatchSize": 100
    },
    "ExpireReservations": {
        "DelaySeconds": 15
    },
    "ServiceBus" : {
        "ConnectionString": "Endpoint=sb://localhost;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=SAS_KEY_VALUE;UseDevelopmentEmulator=true;",
        "PublisherTopic": "bookings-events",
        "Topics": {
            "Payments": "payments-events"
        },
        "Subscriptions" : {
            "BookingsService": "bookings-service"
        }
    }
}
